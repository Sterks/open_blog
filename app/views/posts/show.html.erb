<h2>Add group</h2>

<%= form_for(@post, @post.category.build) do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :body %><br>
  <%= f.text_field :body  %>
</p>
<p>

</p><%= f.submit %>

<% end %>

