<table>
<thead>
  <th>
    <tr>Название поста</tr>
    <tr>Текст поста</tr>
    <td>Категория</td>
    <td>Описание</td>
  </th>
</thead>
<tbody>
  <% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.name, post %></td>
    <td><%= post.body %></td>
    <td><%= post.category.title %></td>
    <td><%#= link_to 'Удалить', post_path(post), method: :delete, data:  {contfirm: 'Вы уверены?'} %>
  <% end %>
  </tr>
</tbody>
</table>
